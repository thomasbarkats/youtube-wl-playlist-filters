{
  "manifest_version": 3,
  "name": "YouTube Playlist Filters",
  "version": "1.0.0",
  "author": "Thomas BARKATS",
  "description": "Enhance your YouTube Watch Later and other playlists experience with search and filtering capabilities.",
  "homepage_url": "https://github.com/thomasbarkats/ytb-playlist-filters",
  "permissions": [],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["dist/main.bundle.js"],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [{
    "resources": [
      "src/templates/*",
      "src/styles/*"
    ],
    "matches": ["*://*.youtube.com/*"]
  }],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "YouTube Playlist Filters"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "minimum_chrome_version": "88",
  "offline_enabled": true
}
