{
  "manifest_version": 3,
  "name": "YouTube WL & Playlist Filters",
  "version": "1.0",
  "author": "Thomas BARKATS",
  "description": "Improves the interface of Youtube Playlist pages on desktop with filters and more. Useful for 'Watch later' page",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [{
    "matches": ["*://*.youtube.com/playlist?list=*"],
    "js": ["dist/main.bundle.js"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://storage.googleapis.com"
  },
  "web_accessible_resources": [{
    "resources": [
      "src/templates/*",
      "src/styles/*"
    ],
    "matches": ["*://*.youtube.com/*"]
  }],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}